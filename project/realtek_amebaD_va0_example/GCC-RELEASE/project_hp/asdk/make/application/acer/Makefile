include $(MAKE_INCLUDE_GEN)

.PHONY: all clean

#*****************************************************************************#
#                               VARIABLES                               #
#*****************************************************************************#
DIR = $(BASEDIR)/component/common/application/acer

vpath %.c $(DIR) $(shell find $(DIR) -type d)

#acer - acerpure
IFLAGS += -I$(DIR)/inc/acerpure

#acer - startup
IFLAGS += -I$(DIR)/inc/startup

#*****************************************************************************#
#                               Source FILE LIST                              #
#*****************************************************************************#

#acer - acerpure
CSRC += $(DIR)/src/acerpure/aws_acerpure_daemon.c

#acer - startup
CSRC += $(DIR)/src/startup/acer_startup.c
CSRC += $(DIR)/src/startup/acer_mdns.c



#*****************************************************************************#
#                               Object FILE LIST                              #
#*****************************************************************************#
OBJS = $(notdir $(CSRC:.c=.o))

#*****************************************************************************#
#                               Include Dependency                            #
#*****************************************************************************#
-include $(OBJS:.o=.d)


#*****************************************************************************#
#                        RULES TO GENERATE TARGETS                            #
#*****************************************************************************#
all: CORE_TARGETS COPY_RAM_OBJS

#*****************************************************************************#
#              GENERATE OBJECT FILE 
#*****************************************************************************#
CORE_TARGETS: $(OBJS)

#*****************************************************************************#
#                        RULES TO CLEAN TARGETS                               #
#*****************************************************************************#
clean: CLEAN_OBJS
	$(REMOVE) *.o
	$(REMOVE) *.i
	$(REMOVE) *.s
	$(REMOVE) *.su
	$(REMOVE) *.d

-include $(DEPS)
